generator client {
  provider        = "prisma-client-js"
  output          = "../generated/prisma"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  schemas  = ["parsedm", "autosell", "bots"]
}

model Pages {
  id       Int      @id @default(autoincrement())
  time     DateTime @default(now())
  marketMy Int
  slots    Slots[]

  @@schema("parsedm")
}

model Slots {
  id          Int     @id @default(autoincrement())
  name        String
  price       Int
  course      Int
  marketPrice Int
  purpose     String?
  dealer      String
  page        Pages   @relation(fields: [pageId], references: [id])
  pageId      Int

  @@schema("parsedm")
}

model PriceConfig {
  id        Int    @id @default(autoincrement())
  itemName  String
  priceSell Int
  priceBuy  Int

  @@schema("autosell")
}

model BotsConfig {
  id       Int    @id @default(autoincrement())
  nick     String
  server   String
  settings Json?

  @@schema("bots")
}
